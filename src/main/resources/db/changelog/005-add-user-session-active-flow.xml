<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="005-add-user-session-active-flow" author="max">

        <addColumn tableName="user_session">
            <column name="active_flow_ns" type="VARCHAR(16)"/>
            <column name="active_draft_type" type="VARCHAR(32)"/>
        </addColumn>

        <rollback>
            <dropColumn tableName="user_session" columnName="active_flow_ns"/>
            <dropColumn tableName="user_session" columnName="active_draft_type"/>
        </rollback>

    </changeSet>

</databaseChangeLog>
