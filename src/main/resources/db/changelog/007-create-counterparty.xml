<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="007-create-counterparty" author="max">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="counterparty"/>
            </not>
        </preConditions>

        <createTable tableName="counterparty">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>

            <column name="kind" type="VARCHAR(32)" defaultValue="OTHER">
                <constraints nullable="false"/>
            </column>

            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>

            <column name="created_by_chat_id" type="BIGINT"/>

            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- уникальность по нормализованному имени только среди активных -->
    <changeSet id="007-ux-counterparty-name-norm-active" author="max">
        <sql>
            CREATE UNIQUE INDEX IF NOT EXISTS ux_counterparty_name_norm_active
            ON counterparty (
            lower(regexp_replace(btrim(name), E'\\s+', ' ', 'g'))
            )
            WHERE is_active = true;
        </sql>
    </changeSet>

    <!-- быстрые фильтры/отчёты по типу -->
    <changeSet id="007-ix-counterparty-kind-active" author="max">
        <sql>
            CREATE INDEX IF NOT EXISTS ix_counterparty_kind_active
            ON counterparty (kind, is_active);
        </sql>
    </changeSet>

    <!-- чтобы в kind не улетело "asdasd" -->
    <changeSet id="007-chk-counterparty-kind" author="max">
        <sql>
            ALTER TABLE counterparty
            ADD CONSTRAINT chk_counterparty_kind
            CHECK (kind IN ('FUEL','STORE','MATERIALS','SERVICE','COMPANY','OTHER'));
        </sql>

        <rollback>
            ALTER TABLE counterparty
            DROP CONSTRAINT IF EXISTS chk_counterparty_kind;
        </rollback>
    </changeSet>

</databaseChangeLog>
