<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="003-create-operation-and-user-draft" author="max">

        <createTable tableName="operation">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="chat_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="op_type" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>

            <column name="op_date" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="amount" type="NUMERIC(14,2)">
                <constraints nullable="false"/>
            </column>

            <column name="note" type="TEXT"/>

            <column name="created_at" type="TIMESTAMP" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="operation" indexName="idx_operation_chat_date">
            <column name="chat_id"/>
            <column name="op_date"/>
        </createIndex>

        <createTable tableName="user_draft">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="chat_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="data_json" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="user_draft"
                             columnNames="chat_id"
                             constraintName="uk_user_draft_chat_id"/>
    </changeSet>
</databaseChangeLog>
