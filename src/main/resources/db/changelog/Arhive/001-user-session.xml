<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="001-create-user_session" author="max">
        <createTable tableName="user_session">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_session"/>
            </column>

            <column name="chat_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="locale" type="VARCHAR(20)"/>

            <column name="first_name" type="VARCHAR(255)"/>
        </createTable>

        <addUniqueConstraint tableName="user_session"
                             columnNames="chat_id"
                             constraintName="uk_user_session_chat_id"/>
    </changeSet>

</databaseChangeLog>
