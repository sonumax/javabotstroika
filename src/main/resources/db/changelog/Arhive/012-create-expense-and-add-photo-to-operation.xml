<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="012-create-expense" author="max">

        <createTable tableName="expense">
            <column name="operation_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="object_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="nomenclature_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="counterparty_id" type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="expense" baseColumnNames="operation_id"
                referencedTableName="operation" referencedColumnNames="id"
                constraintName="fk_expense_operation"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="expense" baseColumnNames="object_id"
                referencedTableName="work_object" referencedColumnNames="id"
                constraintName="fk_expense_object"
                onDelete="RESTRICT"/>

        <addForeignKeyConstraint
                baseTableName="expense" baseColumnNames="nomenclature_id"
                referencedTableName="nomenclature" referencedColumnNames="id"
                constraintName="fk_expense_nomenclature"
                onDelete="RESTRICT"/>

        <addForeignKeyConstraint
                baseTableName="expense" baseColumnNames="counterparty_id"
                referencedTableName="counterparty" referencedColumnNames="id"
                constraintName="fk_expense_counterparty"
                onDelete="SET NULL"/>

        <createIndex tableName="expense" indexName="idx_expense_nom">
            <column name="nomenclature_id"/>
        </createIndex>

        <createIndex tableName="expense" indexName="idx_expense_cp">
            <column name="counterparty_id"/>
        </createIndex>

        <createIndex tableName="expense" indexName="idx_expense_obj">
            <column name="object_id"/>
        </createIndex>

        <createIndex tableName="expense" indexName="idx_expense_nom_cp">
            <column name="nomenclature_id"/>
            <column name="counterparty_id"/>
        </createIndex>

        <createIndex tableName="expense" indexName="idx_expense_nom_op">
            <column name="nomenclature_id"/>
            <column name="operation_id"/>
        </createIndex>

        <addColumn tableName="operation">
            <column name="photo_file_id" type="TEXT"/>
        </addColumn>

    </changeSet>

</databaseChangeLog>
