<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
          http://www.liquibase.org/xml/ns/dbchangelog
          http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="009-create-nomenclature" author="max">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="nomenclature"/>
            </not>
        </preConditions>

        <createTable tableName="nomenclature">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(128)">
                <constraints nullable="false"/>
            </column>

            <column name="name_norm" type="VARCHAR(160)">
                <constraints nullable="false"/>
            </column>

            <column name="is_active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>

            <column name="created_by_chat_id" type="BIGINT"/>

            <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- уникальность только среди активных -->
    <changeSet id="009-ux-nomenclature-name-norm-active" author="max">
        <sql>
            CREATE UNIQUE INDEX IF NOT EXISTS ux_nomenclature_name_norm_active
            ON nomenclature (name_norm)
            WHERE is_active = true;
        </sql>
    </changeSet>

    <changeSet id="009-ix-nomenclature-name" author="max">
        <createIndex tableName="nomenclature" indexName="ix_nomenclature_name">
            <column name="name"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
